<div class="banner" style="background-image: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.5)), url(<%= image_path ("color.jpg") %>)">
  <div class="container education">
        <div class="title-info text-center">
          <h2><span class="dot">.</span>Hobbies</h2>
        </div>


        <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
          <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">

            <!-- Indicators -->
<!--             <ol class="carousel-indicators">
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
              <li data-target="#myCarousel" data-slide-to="2"></li>
              <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol> -->

            <!-- Wrapper for slides -->

            <div class="carousel-inner" role="listbox">

              <div class="item active">
                <div class="hobbie-card" style="background-image: url(<%= image_path ("board-2.jpg") %>);">
                  <div class="card-description">
                    <h2>snowboarding</h2>
                  </div>
                </div>
              </div>

              <div class="item">
                <div class="hobbie-card" style="background-image: url(<%= image_path ("drums.jpg") %>);">
                  <div class="card-description">
                    <h2>drums</h2>
                  </div>
                </div>
              </div>


              <div class="item">
                <div class="hobbie-card" style="background-image: url(<%= image_path ("festival.jpg") %>);">
                  <div class="card-description">
                    <h2>music festivals</h2>
                  </div>
                </div>
              </div>

              <div class="item">
                <div class="hobbie-card" style="background-image: url(<%= image_path ("travel-3.jpg") %>);">
                  <div class="card-description">
                    <h2>travelling</h2>
                  </div>
                </div>
              </div>

              <div class="item">
                <div class="hobbie-card" style="background-image: url(<%= image_path ("food.jpg") %>);">
                  <div class="card-description">
                    <h2>good food</h2>
                  </div>
                </div>
              </div>


            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>

